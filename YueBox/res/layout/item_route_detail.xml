<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

     	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_title"
        android:background="@color/white"
        android:clickable="true" >

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
		android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="18sp"
        android:textColor="@color/text_darkgray"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/tv_content"
        android:text="TextView"
        android:textSize="13sp"
        android:textColor="@color/text_darkgray" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_distance"
        android:layout_alignBottom="@+id/tv_distance"
        android:layout_toRightOf="@+id/tv_distance"
        android:layout_marginLeft="30dp"
        android:paddingBottom="5dp"
        android:text="TextView" 
        android:textSize="13sp"
        android:textColor="@color/text_darkgray"/>
    
        <View 
    android:id="@+id/view_darkgray"
    android:layout_height="0.1dp" 
    android:background="@color/text_lightgray" 
    android:layout_width="match_parent"
    android:layout_below="@+id/tv_time">	   	
	</View>
	
</RelativeLayout>


