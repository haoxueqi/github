			  myLocationOverlay.setData(locData);
			  mMapView.refresh();
			  if(isFirstLoc == true)
			  {
				  mMapController.animateTo(new GeoPoint((int)(locData.latitude*1e6),
						  (int)(locData.longitude* 1e6)));
