	public String switchTime(int number)
	{
	    String time;
    	if(number/60 == 0)
    		time = "1分钟";
    	else if(number/60 < 60)
    		time = number/60 + "分钟";
    	else
    		time = number/3600 + "小时" + number/60 + "分钟";
    	return time;
	}
	
	public String switchDistance(int number)
	{
    	String distance;
		if(number > 2000)
    		distance = (float)(number/100)/10 + "km";
    	else
    		distance = number + "m";
		return distance;
	}
	
