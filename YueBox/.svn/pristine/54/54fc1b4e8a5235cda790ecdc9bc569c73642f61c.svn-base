<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<include layout="@layout/item_my_order_header"
		android:layout_width="fill_parent" 
		android:layout_height="40dp" />

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <TextView
	        android:id="@+id/tv_client"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/layout_header"
	        android:text="盘龙区营业厅"
	        android:textSize="20sp" />
	    
	    <TextView
	        android:id="@+id/tv_address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/tv_client"
	        android:textSize="17sp"
	        android:text="盘龙区102路" />
	
	    <TextView
	        android:id="@+id/tv_box_credits"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/tv_address"
	        android:textSize="17sp"
	        android:text="" />
	    
	     <TextView
	        android:id="@+id/tv_distance"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/image_distance"
	        android:layout_alignParentRight="true"
	        android:text="0.9km" />
	
	    <ImageView
	        android:id="@+id/image_distance"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/tv_box_credits"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/tv_box_credits"
	        android:layout_marginRight="60dp"
	        android:src="@drawable/tag_distance" />
	
	</RelativeLayout>
		
</LinearLayout>
