<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
    <View 
    android:id="@+id/viewyellow_top"
    android:layout_height="6dp" 
    android:background="@color/background_yellow" 
    android:layout_width="match_parent"
    android:layout_alignParentTop="true">	   	
	</View> 

    <TextView
        android:id="@+id/tv_client"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:singleLine = "true"
	    android:ellipsize = "end"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
		android:layout_below="@+id/viewyellow_top"
        android:layout_alignParentLeft="true"      
        android:textSize="18sp"

        android:textColor="@color/base_blue"
        android:text="盘龙区营业厅" />

    <ImageView
        android:id="@+id/tag_box"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_client"
        android:layout_below="@+id/tv_client"
        android:src="@drawable/tag_box" />

    <TextView
        android:id="@+id/tv_box"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tag_box"
        android:layout_below="@+id/tv_client"
        android:textSize="13sp"
        android:textColor="@color/text_darkgray"
        android:text="盒子:34" />

    <ImageView
        android:id="@+id/tag_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_box"
		android:layout_alignBottom="@+id/tag_box"
		android:layout_marginLeft="30dp"
        android:src="@drawable/tag_credits" />
   <TextView
        android:id="@+id/tv_credits"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_client"
        android:layout_toRightOf="@+id/tag_credits"
        android:textSize="13sp"
        android:textColor="@color/text_darkgray"
        android:text="积分:250" />
   <View 
    android:id="@+id/viewgray"
    android:layout_height="25dp" 
    android:background="@color/base_lightgray" 
    android:layout_width="match_parent"
    android:layout_below="@+id/tv_box">	   	
	</View>
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="190dp"
        android:singleLine = "true"
	    android:ellipsize = "end"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_box"
        android:textSize="14sp"
        android:textColor="@color/text_darkgray"
        android:text="盘龙区102路" />   
     <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_distance"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:paddingLeft="3dp"
        android:text="0.9km" 
        android:textColor="@color/text_darkgray"/>

    <ImageView
        android:id="@+id/image_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_address"
        android:layout_alignTop="@+id/tv_address"
        android:layout_toLeftOf="@+id/tv_distance"
        android:src="@drawable/tag_distance" />

    <TextView
        android:id="@+id/tv_new"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/pink"
        android:textSize="20sp" />
    
     <View 
    android:id="@+id/view_grayedge"
    android:layout_height="3dp" 
    android:background="@color/base_darkgray" 
    android:layout_width="match_parent"
	android:layout_below="@+id/viewgray">	   	
	</View> 
    
    <View 
    android:id="@+id/viewyellow_bottom"
    android:layout_height="6dp" 
    android:background="@color/background_yellow" 
    android:layout_width="match_parent"
	android:layout_below="@+id/view_grayedge">
	</View>



</RelativeLayout>
