<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
<RelativeLayout
    android:id="@+id/my_info"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    >
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/person_default" />

    <TextView
        android:id="@+id/tv_my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="小明"
        android:textStyle="bold"
        android:textColor="@color/dark_green"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_my_department"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_my_name"
        android:layout_alignLeft="@+id/tv_my_name"
        android:layout_marginTop="8dp"
        android:paddingBottom="12dp"
        android:singleLine = "true"	 
	    android:ellipsize = "end" 
        android:text="部门-职位为为为为为个个个个"

        android:textSize="14sp"
        android:textColor="@color/text_darkgray" />

    <Button
        android:id="@+id/button_online"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:background="@color/btn_gray"
        android:text="离线"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_my_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_my_name"
        android:layout_alignBottom="@+id/tv_my_name"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/tv_my_name"
        android:text="积分:1234"
        android:textColor="@color/text_darkgray"
        android:textSize="14sp"
        android:textStyle="bold" />

    
 
</RelativeLayout>
<TextView
        android:id="@+id/tv_tips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_info"
        android:gravity="center"
        android:background="@color/btn_gray"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="当前无未完成工单，快去抢一个吧^_^ "
        android:textSize="13sp" 
        android:textColor="@color/white"/>"
<LinearLayout 
    android:id="@+id/fragment_list"
    android:layout_below="@+id/tv_tips"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    
    
    <com.ebupt.yuebox.view.FastScrollView
        android:id="@+id/scrollView"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">
		<com.ebupt.yuebox.view.SectionOrderListView
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:id="@+id/list_my_order" 
			android:fastScrollEnabled="false"
			android:divider="@null" />
	</com.ebupt.yuebox.view.FastScrollView>

</LinearLayout>
</RelativeLayout>