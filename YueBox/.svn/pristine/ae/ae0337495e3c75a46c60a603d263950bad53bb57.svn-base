<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_yellow" >

    <RelativeLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/base_blue" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:shadowColor="#90000000"
            android:shadowDx="0"
            android:shadowDy="-1"
            android:shadowRadius="2"
            android:text="编辑工单"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/tag_back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_mall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_mall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="店铺名"
            android:textColor="@color/base_blue"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/ed_mall"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_mall"
            android:background="@color/white"
            android:ems="10"
            android:text="@string/detail"
            android:textColor="@color/line_darkgray"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_grayedge"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/base_darkgray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_person"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_mall"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_person"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="联系人"
            android:textColor="@color/base_blue"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/ed_person"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_person"
            android:background="@color/white"
            android:ems="10"
            android:text="@string/detail"
            android:textColor="@color/line_darkgray"
            android:textSize="16sp" >
        </EditText>

        <View
            android:id="@+id/view_grayedge"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/base_darkgray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_mobile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_person"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="手机"
            android:textColor="@color/base_blue"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/ed_mobile"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_mobile"
            android:background="@color/white"
            android:ems="10"
            android:text="@string/detail"
            android:textColor="@color/line_darkgray"
            android:textSize="16sp" >
        </EditText>

        <View
            android:id="@+id/view_grayedge"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/base_darkgray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_tel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_mobile"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="固定电话"
            android:textColor="@color/base_blue"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/ed_tel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_tel"
            android:background="@color/white"
            android:ems="10"
            android:textColor="@color/line_darkgray"
            android:textSize="16sp" >
        </EditText>

        <View
            android:id="@+id/view_grayedge"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/base_darkgray" />
    </RelativeLayout>




        <Button
        android:id="@+id/submit_btn"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@color/base_blue"
        android:shadowColor="#ffffffff"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="修改完成"
        android:textColor="@color/background_yellow"
        android:textSize="18sp" />


</RelativeLayout>