<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_yellow" >

    <RelativeLayout
        android:id="@+id/layout_detail_name"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/base_blue" >
        
		<ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/tag_back" />
    	<TextView
    	    
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
	        android:shadowColor="#90000000"
	        android:shadowDx="0"
	        android:shadowDy="-1"
	        android:shadowRadius="2"
	    	android:textColor="@color/white"
	    	android:textSize="22sp"
    	    android:text="工单详情"
    	     />
    </RelativeLayout>
    
    <RelativeLayout
       	android:id="@+id/layout_basic"
       	android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:layout_marginBottom="8dp"
       	android:layout_below="@+id/layout_detail_name"
       	android:background="@color/white">

  
	     <TextView
	         android:id="@+id/tv_detail_name"
	         android:layout_width="200dp"
	         android:layout_height="wrap_content"
	         android:text="黄焖鸡" 
	         android:textSize="20sp"
			 android:textColor="@color/base_blue"
			 android:layout_marginLeft="22dp"
	         android:layout_marginTop="20dp"/>

		<TextView
	         android:id="@+id/tv_detail_box_num"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="15dp"
	         android:layout_alignLeft="@+id/tv_detail_name"
	         android:layout_below="@+id/tv_detail_name"
	         android:text="盒子数:22"
	         android:textSize="13sp"
	         android:textColor="@color/dark_green" />
		
	     <TextView
	         android:id="@+id/tv_detail_publish_time"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_below="@+id/tv_detail_box_num"
	         android:layout_marginTop="6dp"
	         android:layout_alignLeft="@+id/tv_detail_box_num"
	         android:text="发布时间:1970-11-12 17:50"
	         android:textSize="13sp" 
	         android:textColor="@color/dark_green" />
	     
	     	     <TextView
	         android:id="@+id/tv_detail_end_time"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_below="@+id/tv_detail_publish_time"
	         android:layout_marginTop="6dp"
	         android:paddingBottom="12dp"
	         android:layout_alignLeft="@+id/tv_detail_box_num"
	         android:text="截止时间:1970-11-12 17:50"
	         android:textSize="13sp" 
	         android:textColor="@color/dark_green" />
	<View 
    android:id="@+id/view_darkgreen"
    android:layout_height="3dp" 
    android:background="@color/dark_green" 
    android:layout_width="match_parent"
    android:layout_below="@+id/tv_detail_end_time">	   	
	</View>

		     <ImageView
		         android:id="@+id/imageView1"
		         android:layout_width="80dp"
		         android:layout_height="50dp"
		         android:layout_marginTop="15dp"
		         android:layout_alignParentRight="true"
		         android:layout_alignParentTop="true"
		         android:src="@drawable/task_detail_credit" />

	     <TextView
	         android:id="@+id/tv_detail_grab_credits"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="25dp"
	         android:layout_alignParentRight="true"
	         android:layout_marginRight="28dp"
	         android:text="抢单 5"
	         android:textColor="@color/white" />

	     <TextView
	         android:id="@+id/tv_detail_finish_credits"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_below="@+id/tv_detail_grab_credits"
	         android:layout_alignLeft="@+id/tv_detail_grab_credits"
	         android:text="完成 15"
	         android:textColor="@color/white"  />


	     
     </RelativeLayout>
     

    <RelativeLayout
        android:id="@+id/layout_detail_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_basic"
        android:background="@color/white"
        android:clickable="true" >

        <ImageView
            android:id="@+id/image_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/tag_address" />

        <TextView
            android:id="@+id/tv_detail_address"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/image_car"
            android:text="盘龙区120号" 
            android:textSize="16dp"
            android:textColor="@color/text_darkgray"/>
    <View 
    android:id="@+id/view_darkgreen"
    android:layout_height="0.1dp" 
    android:background="@color/text_darkgray" 
    android:layout_width="match_parent"

    android:layout_alignParentBottom="true">	   	
	</View>

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_detail_mobile"
         android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_detail_address"
        android:clickable="true"
        android:background="@color/white" >

	    <ImageView
	        android:id="@+id/image_mobile"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="18dp"
	        android:src="@drawable/tag_phone" />

	    <TextView
	        android:id="@+id/tv_detail_mobile"
	        android:layout_width="240dp"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="15dp"
	        android:layout_toRightOf="@+id/image_mobile"
	        android:text="1234567890"
	        android:textSize="16dp"
	        android:textColor="@color/text_darkgray" />
	    
	<View 
    android:id="@+id/view_darkgreen2"
    android:layout_height="0.1dp" 
    android:background="@color/text_darkgray" 
    android:layout_width="match_parent"

    android:layout_alignParentBottom="true">	   	
	</View>

     </RelativeLayout>

     <Button
         android:id="@+id/button_grab"
         android:layout_width="240dp"
         android:layout_height="48dp"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="61dp"
         android:shadowColor="#ffffffff"
         android:background="@color/btn_orange"
         android:shadowDx="0"
         android:shadowDy="1"
         android:shadowRadius="1"
         android:text="抢单"
         android:textColor="@color/background_yellow"
         android:textSize="18sp" />

</RelativeLayout>