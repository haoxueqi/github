<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03b0c3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserResetpsw" >

    <EditText
        android:id="@+id/reset_passwd"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/rereset_passwd"
        android:layout_alignLeft="@+id/rereset_passwd"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="登录密码，最短6位"
        android:inputType="text"
 		android:password="true"
        android:textSize="18sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/rereset_passwd"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_alignLeft="@+id/reset_submit"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="再次输入密码"
        android:inputType="text"
        android:password="true"
        android:textSize="18sp" />


    <Button
        android:id="@+id/reset_submit"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:background="#adc71c"
        android:shadowColor="#ffffffff"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="确定"
        android:textColor="#03b0c3"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reset_passwd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="1"
        android:text="首次登陆，请重置密码~"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>